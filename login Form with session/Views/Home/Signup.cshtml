@model login_Form_with_session.Models.User

@{
    ViewData["Title"] = "Signup";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-5">
                <div class="card-header bg-success text-white text-center py-3">
                    <h4 class="mb-0">Signup</h4>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Signup">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold"></label>
                            <input asp-for="Name" class="form-control" placeholder="Enter your name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Gender" class="form-label fw-bold"></label>
                            <select asp-for="Gender" class="form-control">
                                <option value="">-- Select Gender --</option>
                                <option value="Male">Male</option>
                                <option value="Female">Female</option>
                            </select>
                            <span asp-validation-for="Gender" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Age" class="form-label fw-bold"></label>
                            <input asp-for="Age" class="form-control" placeholder="Enter your age" />
                            <span asp-validation-for="Age" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold"></label>
                            <input asp-for="Password" type="password" class="form-control" placeholder="Enter your password" />
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success">Create Account</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center bg-light">
                    <small>
                        Already have an account? <a asp-action="Login" class="text-decoration-none">Login here</a>
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
